<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ccb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.skd.centeredcontentbutton.CenteredContentToggleButton
        android:id="@+id/btn1"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        ccb:btnBg="@drawable/toggle"
        ccb:btnChecked="true"
        ccb:btnIconLeft="@drawable/ic_add"
        ccb:btnText="Test 1"
        ccb:btnTextStyle="@style/btnTextStyle" />

    <com.skd.centeredcontentbutton.CenteredContentToggleButton
        android:id="@+id/btn2"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        ccb:btnBg="@drawable/toggle"
        ccb:btnIconRight="@drawable/ic_add"
        ccb:btnText="Test 2"
        ccb:btnTextStyle="@style/btnTextStyle" />

</LinearLayout>